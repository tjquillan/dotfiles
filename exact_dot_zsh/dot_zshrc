# Zsh options
setopt hist_ignore_all_dups
setopt hist_ignore_dups

# Add local completions
fpath=("$ZDOTDIR/completions" "$ZDOTDIR/completions/generated" $fpath)

# load zsh config files
setopt extendedglob
config_files=(~/.zsh/^(completions|env)/*.zsh(N))
unsetopt extendedglob
for file in ${config_files}
do
	source $file
done

# Bootstrap Zinit
source "$ZDOTDIR/plugins-bootstrap.zsh"
